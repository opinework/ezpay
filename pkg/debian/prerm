#!/bin/bash
set -e

case "$1" in
    remove|upgrade|deconfigure)
        # Stop service before removal
        if systemctl is-active --quiet ezpay; then
            systemctl stop ezpay || true
        fi
        ;;

    failed-upgrade)
        ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

#DEBHELPER#

exit 0
